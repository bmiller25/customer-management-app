<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.benjaminjmiller.customermanagementapp">

    <class name="Customer" table="customer">
        <id name="id" column="id">
            <generator class="increment"/>
        </id>
        <property name="firstName" column="first_name" />
        <property name="lastName" column="last_name" />
        <property name="gender" column="gender" />
        <property name="address" column="address" />
        <property name="phoneNumber" column="phone_number" />
        <property name="nameOnCreditCard" column="name_on_credit_card" />
        <property name="creditCardNumber" column="credit_card_number" />
        <property name="expirationDate" column="expiration_date" />
        <property name="csc" column="csc" />
        <property name="rewardsMember" column="rewards_member" />
        <property name="rewardsPoints" column="rewards_points" />
    </class>

</hibernate-mapping>
